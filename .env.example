# Sample env vars for the VI prototype (no secrets committed)
VIDEO_URL=https://youtu.be/UiCtBkC9hgs
JOB_ID=demo-uiCt

# Storage
AZURE_STORAGE_AUTH_MODE=aad
AZURE_STORAGE_RESOURCE_GROUP=<storage-resource-group>
AZURE_STORAGE_ACCOUNT=<storage-account-name>
AZURE_STORAGE_CONNECTION_STRING=<storage-connection-string>
AZURE_STORAGE_CONTAINER_RAW=raw
AZURE_STORAGE_CONTAINER_VI=video-indexer
AZURE_STORAGE_CONTAINER_FRAMES=frames
AZURE_STORAGE_CONTAINER_OUTPUTS=outputs

# Video Indexer
VIDEO_INDEXER_ACCOUNT_ID=<vi-account-id>
VIDEO_INDEXER_LOCATION=<trial|westus2|westeurope|...>
VIDEO_INDEXER_SUBSCRIPTION_KEY=<vi-subscription-key>
VIDEO_INDEXER_API_BASE=https://api.videoindexer.ai

# OpenAI (summaries)
OPENAI_ENDPOINT=<https://your-openai-resource.openai.azure.com>
OPENAI_API_KEY=<openai-key>
OPENAI_DEPLOYMENT=gpt-4o-mini

# Key Vault (optional, if pulling secrets at runtime)
KEY_VAULT_NAME=<kv-name>
